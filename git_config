# Fetch all remote branches from origin to local tracking branches
git config remote.origin.fetch "+refs/heads/*:refs/remotes/origin/*"

# Automatically set up a remote tracking branch when pushing
git config --global push.autoSetupRemote true

# Automatically fetch submodules on git pull
git config --global submodule.recurse true

# Fetch submodules in parallel
git config --global submodule.fetchJobs 16

# Use vim as the default editor
git config --global core.editor "vim"
